@model SydnomCollege.Models.Student

@{
    ViewData["Title"] = "Details";
    var photopath = "~/Images/" + (Model.PhotoPath ?? "NoImage.jpg");
}

<h1>Details</h1>


<div>
    <a asp-action="Edit" asp-route-id="@Model.StudentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h4>@Model.Name</h4>

            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@photopath" asp-append-version="true" height="400" width="100" />
                <h6>Student Id : @Model.StudentId</h6>
                <h6>Email : @Model.Email</h6>
                <h6>Email : @Model.Dob</h6>
                <h6>Grade : @Model.Grade</h6>
                <h6>City : @Model.City</h6>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="Students" asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-primary m-1">Edit</a>
                <a asp-controller="Students" asp-action="Details" asp-route-id="@Model.StudentId" class="btn btn-primary m-1">Details</a>
                <a asp-controller="Students" asp-action="Delete" asp-route-id="@Model.StudentId" class="btn btn-danger m-1" onclick="return confirm('are you sure you want to delete this record??')">Delete</a>

            </div>
        </div>
    </div>
</div>